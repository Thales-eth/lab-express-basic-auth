<div class="container create-form">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1 class="create-main-title">Inicia tu sesión</h1>

            <hr>

            <form action="/inicio-sesion" method="POST">
                <div class="mb-3">
                    <label for="username" class="form-label"><i>Usuario</i></label>
                    <input type="text" class="form-control" id="username" name="username">
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label"><i>Contraseña</i></label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                {{#if errorMessage}}
                <div class="error">
                    {{errorMessage}}
                </div>
                {{/if}}
                <button type="submit" class="btn btn-light submit-link">Enviar</button>
            </form>

        </div>
    </div>
</div>